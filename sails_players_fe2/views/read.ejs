<%- partial ('partials/statusmessage.ejs') %>

<legend>Contacts</legend>
<table class="table table-striped table-hover" id="contactTable" style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th>Address Type</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Phone Type</th>
      <th>Phone Number</th>

    </tr>
  </thead>
  <tbody>
  <% if(typeof contacts != "undefined" && contacts.length > 0){ %>
    <% contacts.forEach(function(contact){ %>
      <% sails.log(JSON.stringify(contact, null, 2)) %>
      <tr>
        <td><%= contact.person_title %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.person_co %></td>

        <td><%= contact.addresses[0].address_type %></td>
        <td><%= contact.addresses[0].address_street %></td>
        <td><%= contact.addresses[0].address_city %></td>
        <td><%= contact.addresses[0].address_state %></td>
        <td><%= contact.addresses[0].address_zip %></td>
        
        <td><%= contact.phoneNumbers[0].phone_type %></td>
        <td><%= contact.phoneNumbers[0].phone_number %></td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>
